<UserControl x:Class="UI.Code.Controls.LogInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Code.View"
             mc:Ignorable="d" 
             >
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Image Source="/icon.png" Width="150" Height="60" Grid.Row="0" HorizontalAlignment="Right"></Image>
        <TextBlock x:Name="txtUsername"  FontSize="15" Style="{StaticResource Title}"  Margin="10" VerticalAlignment="Center" Foreground="White"></TextBlock>
    </StackPanel>
    
</UserControl>
