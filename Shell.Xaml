<Window
    x:Class="UI.Code.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:UI.Code"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Deck Inspectors"
    Width="1080"
    Height="600"
    prism:ViewModelLocator.AutoWireViewModel="True"
    AllowsTransparency="True"
    Background="#f4f4f4"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources />
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding OnLoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>-->

        <!--  // Background Color //  -->

        <Grid Background="{StaticResource AppMainColor}">

            <!--  // Background Image //  -->

            <Grid x:Name="BG" PreviewMouseLeftButtonDown="BG_PreviewMouseLeftButtonDown">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="1"
                        Margin="80,0,0,-0.4"
                        HorizontalAlignment="Right">
                        <ContentControl prism:RegionManager.RegionName="LogInfoRegion" />
                    </StackPanel>


                    <StackPanel
                        Name="btnMin"
                        Grid.Column="2"
                        Margin="0,0,20,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <Button
                            Margin="5"
                            Click="btnMin_Click"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="Minimize">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Background="Transparent"
                                Kind="WindowMinimize" />
                        </Button>
                        <Button
                            Name="btnMax"
                            Margin="5"
                            Click="btnMax_Click"
                            Foreground="White"
                            Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="Maximize">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Background="Transparent"
                                Kind="WindowMaximize" />
                        </Button>
                        <Button
                            Name="btnClose"
                            Margin="5"
                            Click="Button_Click"
                            Foreground="Red"
                            Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="Close">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Background="Transparent"
                                Kind="PowerStandby" />
                        </Button>

                    </StackPanel>
                </Grid>
                <ContentControl Grid.Row="1" prism:RegionManager.RegionName="MainRegion" />


            </Grid>



            <ContentControl prism:RegionManager.RegionName="NavigationRegion" />

        </Grid>
        <xctk:ChildWindow
            Name="childWindowMessageBox"
            Padding="20"
            BorderThickness="0"
            CloseButtonVisibility="Collapsed"
            IsModal="True"
            Visibility="Collapsed"
            WindowBorderBrush="White"
            WindowStartupLocation="Center"
            WindowState="Open">


            <StackPanel Margin="20">
                <TextBlock
                    Margin="5"
                    Foreground="Orange"
                    Style="{StaticResource Title}"
                    Text="{Binding Status}" />

                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">

                    <TextBlock
                        Margin="5"
                        Foreground="Black"
                        Style="{StaticResource Error}"
                        Text="{Binding Message}" />
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button
                            Name="btnBackOk"
                            Height="25"
                            Margin="10"
                            HorizontalAlignment="Right"
                            HorizontalContentAlignment="Center"
                            Click="btnBackOk_Click"
                            Content="Yes"
                            Style="{StaticResource btn}"
                            ToolTip="Yes" />
                        <Button
                            Name="btnBackClose"
                            Margin="10"
                            HorizontalAlignment="Center"
                            Click="btnBackClose_Click"
                            Style="{StaticResource btn}"
                            ToolTip="No">
                            No
                        </Button>
                    </StackPanel>

                </StackPanel>

            </StackPanel>

        </xctk:ChildWindow>

    </Grid>
</Window>
