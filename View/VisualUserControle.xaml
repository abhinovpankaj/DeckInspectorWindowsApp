                                                        <materialDesign:PackIcon    Kind="ReorderHorizontal"/>
                                                    </Button>
                                                    <Button  Name="btnSaveConclusive"  Visibility="Collapsed"  HorizontalAlignment="Right" Click="btnSaveConclusive_Click" 
