                                                            <RadioButton x:Name="LifeEEE7" Content="4-7" Margin="10,5" Checked="LifeEEE_Click"/>
                                                            <RadioButton x:Name="LifeEEE10" Content="7-10" Margin="10,5" Checked="LifeEEE_Click"/>
                                                            </StackPanel>

                                                        </StackPanel>
                                                    </materialDesign:Card>

                                                    <materialDesign:Card Margin="10,2" materialDesign:ShadowAssist.ShadowDepth="Depth4" UniformCornerRadius="10">
                                                        <StackPanel Orientation="Vertical"  HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                                                            <TextBlock Text="LIFE EXPECTANCY (LBC) – UPDATED (Years)"  Margin="10,5" VerticalAlignment="Center"/>
                                                            <StackPanel Orientation="Horizontal">
                                                            <RadioButton x:Name="LifeLBC" Content="0-1" Margin="10,10" Checked="LifeLBC_Click"/>
                                                            <RadioButton x:Name="LifeLBC4" Content="1-4" Margin="10,5" Checked="LifeLBC_Click"/>
                                                            <RadioButton x:Name="LifeLBC7" Content="4-7" Margin="10,5" Checked="LifeLBC_Click"/>
                                                            <RadioButton x:Name="LifeLBC10" Content="7-10" Margin="10,5" Checked="LifeLBC_Click"/>
                                                            </StackPanel>

                                                        </StackPanel>
                                                    </materialDesign:Card>
                                                    <materialDesign:Card Margin="10,2" materialDesign:ShadowAssist.ShadowDepth="Depth4" UniformCornerRadius="10">
                                                        <StackPanel Orientation="Vertical"  HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                                                            <TextBlock Text="LIFE EXPECTANCY (AWE) – UPDATED (Years)"  Margin="10,5" VerticalAlignment="Center"/>
                                                            <StackPanel Orientation="Horizontal">
                                                                <RadioButton x:Name="LifeAWE" Content="0-1" Margin="10,10" Checked="LifeAWE_Click"/>
                                                            <RadioButton x:Name="LifeAWE4" Content="1-4" Margin="10,5" Checked="LifeAWE_Click"/>
                                                            <RadioButton x:Name="LifeAWE7" Content="4-7" Margin="10,5" Checked="LifeAWE_Click"/>
