            Panel.ZIndex="1"
            BorderThickness="0"
            CloseButtonVisibility="Collapsed"
            IsModal="True"
            Visibility="Collapsed"
            WindowBorderBrush="White"
            WindowStartupLocation="Center"
            WindowState="Open">


            <StackPanel Margin="20">
                <TextBlock
                    Name="txtTitle"
                    Margin="0,5"
                    FontSize="14"
                    FontWeight="Bold" />
                <TextBox
                    Name="txtNodeTitle"
                    Width="200"
                    Margin="5"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.FloatingScale="0.90"
                    materialDesign:HintAssist.Hint="Name"
                    materialDesign:TextFieldAssist.TextBoxViewMargin="1 12 1 0"
                    FontSize="12"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="" />
                <TextBlock Name="txtError" Foreground="Red" />
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                    <Button
                        Name="btnAddEdit"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Click="btnAddEdit_Click"
                        Style="{StaticResource btn}"
                        ToolTip="Save">
                        Save
                    </Button>
                    <Button
                        Name="btnAddEditClose"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Click="btnAddEditClose_Click"
                        Style="{StaticResource btn}"
                        ToolTip="Close">
                        Close
                    </Button>
                </StackPanel>

            </StackPanel>

        </xctk:ChildWindow>
        <xctk:ChildWindow
            Name="childWindowTreeMessageBox"
            Padding="20"
            Panel.ZIndex="1"
            BorderThickness="0"
            CloseButtonVisibility="Collapsed"
            IsModal="True"
            Visibility="Collapsed"
            WindowBorderBrush="White"
            WindowStartupLocation="Center"
            WindowState="Open">


            <StackPanel Margin="20">
                <TextBlock
                    Margin="5"
                    Foreground="Red"
                    Style="{StaticResource Title}"
                    Text="{Binding Status}" />

                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">

                    <TextBlock
                        Margin="5"
                        Style="{StaticResource Error}"
                        Text="{Binding Message}" />
                    <Button
                        Name="btnTreeErrorMsgClose"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Click="btnTreeErrorMsgClose_Click"
                        Style="{StaticResource btn}"
                        ToolTip="Close">
                        Close
                    </Button>
                </StackPanel>

            </StackPanel>

        </xctk:ChildWindow>
        <xctk:ChildWindow
            Name="childDeleteConfirmation"
            Padding="20"
            Panel.ZIndex="1"
            BorderThickness="0"
            CloseButtonVisibility="Collapsed"
            IsModal="True"
            Visibility="Collapsed"
            WindowBorderBrush="White"
            WindowStartupLocation="Center"
            WindowState="Open">


            <StackPanel Margin="20">
                <TextBlock
                    Name="txtDelete"
                    Margin="5"
                    FontSize="14"
                    Foreground="Black"
                    Style="{StaticResource Title}"
                    Text="Are you sure you want to delete?" />

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Name="btnDeleteOk"
                        Height="25"
                        Margin="10"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        Click="btnDeleteOk_Click"
                        Content="Yes"
                        Style="{StaticResource btn}"
                        ToolTip="Yes" />
                    <Button
                        Name="btnDeleteClose"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Click="btnDeleteClose_Click"
                        Style="{StaticResource btn}"
                        ToolTip="No">
                        No
                    </Button>
                </StackPanel>

            </StackPanel>

        </xctk:ChildWindow>


        <xctk:ChildWindow
            Name="childWindowTree"
            Padding="20"
            Panel.ZIndex="300"
            Background="{StaticResource AppMainColor}"
            BorderThickness="0"
            CloseButtonVisibility="Collapsed"
            IsModal="True"
            Visibility="Collapsed"
            WindowBorderBrush="White"
            WindowStartupLocation="Center"
            WindowState="Open">


            <StackPanel Margin="20">
                <!--<ContentControl prism:RegionManager.RegionName="TreeRegionMain" MaxHeight="400" Background="{StaticResource AppMainColor}"/>-->
                <v:UCFilePageView x:Name="fileControl" MaxHeight="400" />
                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">

                    <TextBlock
                        Margin="5"
                        Foreground="{Binding Status, Converter={StaticResource err}}"
                        Style="{StaticResource Error}"
                        Text="{Binding Message}" />
                    <Button
                        Name="btnTreeClose"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Background="White"
                        Click="BtnTreeClose_Click"
                        Foreground="{StaticResource AppMainColor}"
                        Style="{StaticResource btn}"
                        ToolTip="Close">
                        Close
                    </Button>
                </StackPanel>

            </StackPanel>

        </xctk:ChildWindow>
        <xctk:ChildWindow
            Name="childMoveConfirmation"
            Padding="20"
            Panel.ZIndex="2000"
            BorderThickness="0"
            CloseButtonVisibility="Collapsed"
            IsModal="True"
            Visibility="Collapsed"
            WindowBorderBrush="White"
            WindowStartupLocation="Center"
            WindowState="Open">


            <StackPanel Margin="20">
                <TextBlock
                    Name="txtMove"
                    Margin="5"
                    FontSize="14"
                    Foreground="Black"
                    Style="{StaticResource Title}"
                    Text="" />

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Name="btnMoveOk"
                        Height="25"
                        Margin="10"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        Click="BtnMoveOk_Click"
                        Content="Yes"
                        Style="{StaticResource btn}"
                        ToolTip="Yes" />
                    <Button
                        Name="btnMoveClose"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Click="BtnMoveClose_Click"
                        Style="{StaticResource btn}"
                        ToolTip="No">
                        No
                    </Button>
                </StackPanel>

            </StackPanel>

        </xctk:ChildWindow>

    </Grid>


</UserControl>
