                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Margin="0,10" Orientation="Horizontal">
                    <CheckBox Content="Remember me" IsChecked="{Binding IsRemember}" HorizontalAlignment="Center" Width="250"  Foreground="#707070"/>

                </StackPanel>
                <Button HorizontalAlignment="Center" FontSize="14" Width="100" Command="{Binding SubmitCommand}"
    Style="{StaticResource MaterialDesignFlatDarkBgButton}"
    ToolTip="Login">
