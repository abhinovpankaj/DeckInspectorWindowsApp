                                        ContextMenu="{StaticResource ChildContextMenu}"
                                        FontSize="16"
                                        FontWeight="Normal"
                                        Foreground="Black"
                                        Text="{Binding NodeTitle}" />
                                </StackPanel.Children>
                            </StackPanel>
                        </HierarchicalDataTemplate>
